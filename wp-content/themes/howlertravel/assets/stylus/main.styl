@import "nib"
@import "normalize.styl"
@import "icons.styl"


turquesa = #65b6ad
verde = #c0c626
naranja = #FFB233//#e3603d
cafe = #45382d

*
	box-sizing border-box

body
	font-family sans-serif
	font-size 16px
	line-height 30px
	background #EFEBE8

ul
	margin 0
	padding 0
	

a
	text-decoration none
	transition all .5s ease
p 
	margin-top 0
	margin-bottom 1.25rem
h1
h2
h3
h4
h5
	margin-top 0
	font-weight 800
	color #333333
	color cafe
h1
	line-height 45px

img
	max-width 100%
	height auto
input[type="text"]
input[type="email"]
input[type="tel"]	
textarea
	//border 1px solid #F3F3F3
	width 100%
	height 32px
textarea
	height 150px 
	

.table 
	th
		background-color verde
		color white
.alignright
	float right
	
.img 
	border 1px solid #e3e3e3
	padding 5px
	background-color white
	width 100%
	margin-bottom 1rem
	img 
		display block
		width 100%
@media screen and (min-width:980px)
	.img 
		margin-left 1rem
		width 450px
		margin-top -50px
		img 
			display block
.txt-center
	text-align center
.overflow
	overflow hidden

	
.wpcf7-submit
.btn
	border 1px solid #fff
	font-size inherit
	color white
	background 0 0
	text-align center
	cursor pointer
	padding 10px 30px 10px
	display inline-block
	text-transform uppercase
	outline 0
	position relative
	transition all .3s ease
	transform translateZ(0)
	background-color azul
	&:hover
		background-color: #000 
		color white
		//border-color rojo
.wpcf7-submit
.btn-rojo
	background naranja
	color #fff
.inner
	max-width 1200px
	margin 0 auto
	padding-left 1rem
	padding-right 1rem

.header
	text-align center
	background-color transparent
	position absolute
	top 0
	left 0
	right 0
	padding-top 3rem
	z-index 1
	
	&-logo
		width 150px
		display inline-block
		color white
		font-weight bold
		font-size 3rem
		margin-top -40px
		&-text 
			display none
			font-size 1.5rem
	&-menu
		display none
		background-color naranja
		position absolute
		top 138px
		left 0
		right 0

		a
		&-link
			display block
			color white
			padding .5rem
			text-transform uppercase
			font-weight bold
	&-btn-menu
		display block
		background-color naranja
		color white
		border none
		font-size 1.5rem
		width 100%
		outline none

@media screen and (min-width:980px)
	.header
		text-align left
		padding-top 3rem
		&--fixed
			position fixed
			background-color cafe
			padding-top 15px 
			padding-bottom 15px
			z-index 9999
			box-shadow 1px 1px 2px rgba(0,0,0,.45)
			.header-logo
				margin-top .5rem
				width 300px
				img 
					display none
				&-text 
					display block
					color #e4d9c0
			.header-menu
				&-link
				a
					color #e4d9c0	
		/*&-logo
			margin-top .5rem*/
			
		&-menu 
			position static
			display block !important
			float right
			background-color transparent
			.menu-item
			&-item
				display inline-block
				vertical-align top
				margin 0 .5rem
			.current-menu-item 
				a 
					background-color naranja
				
			&-link
			a
				border-radius 10px
				padding .5rem 1rem
				&:hover 
					background-color naranja
		&-btn-menu
			display none	
.single
.page
	.banner
		height 160px
		padding-top 10rem
		.item-info
			display none
.single-hotel
.single-tour
	.entry-title
		max-width: 710px;		
.home

	.banner
		height 644px
		padding-top auto
		.item-info
			display block	
.banner
	height 644px
	background-position center center 
	background-size cover
	background-repeat no-repeat
	background-attachment fixed
	padding-top 10rem
	//position relative
	color white
	
	h1 
		color white
		font-size 2rem
		font-weight normal
		text-shadow 1px 1px 5px rgba(0,0,0,.75)
@media screen and (min-width:980px)
	.banner
		padding-top 18rem
		
		h1 
			font-size 4rem
	.home
		.banner
			padding-top 18rem
.main 
	padding-top 30px
	padding-bottom 30px
	ul 
		margin-bottom 1rem 
		margin-left 45px
.services
	//padding-top 60px
	padding-bottom 60px
	&-title
		text-transform uppercase
		text-align center
		margin-bottom 2rem
		color cafe
	&-container
		display flex
		flex-wrap wrap 
		justify-content space-around
	&-item 
		width 370px
		overflow: hidden;
		min-height: 20px;
		font-size 14px
		margin-bottom 1rem
		position relative
		a 
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			width 100%
			height 100%
			z-index 2
		figure
			//width 190px
			float none //left 
			overflow visible
			//background-color cafe
			height: 199px;
			margin: 0px;
			text-align center
			position relative
			background-position center center
			background-size cover
			background-repeat no-repeat
			i 
				font-size 5rem
				background-color #fecb83
				padding 32px
				border-radius 50%
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
				color white
				border 8px solid rgba(255,255,255,0.75)
			.icon-car
				padding 32px 27.74px
			.icon-clock-o
				padding 32px 39.15px
				
			
		&:hover
			.services-info
				color white
				h2 
					color white
				&:before
					height 100%
					
	&-info
		background-color: rgb(230, 226, 225);
		position: relative;
		z-index: 1;
		box-sizing: border-box;
		overflow: hidden;
		padding: 29px 12px 6px 20px;
		min-height 199px
		line-height 18px
		transition all .3s ease
		h2 
			text-transform uppercase
			font-size .9rem
			transition all .3s ease
		&:before
			content: "";
			position: absolute;
			left: 0px;
			top: 0px;
			z-index: -1;
			width: 100%;
			height: 0;
			background-color: cafe//rgb(255, 152, 0);
			transition: 0.3s;
@media screen and (min-width:980px)
	.services
		&-item 
			figure
				width 190px
				float left
			&:hover
				.services-info
					&:before
						width 100%
		&-info 
			&:before 
				width: 0;
				height: 100%;
.hotels
	padding-bottom 60px
	&-title
		text-align center
		margin-bottom 2rem
		text-transform uppercase
		color cafe
	&-container
		display flex
		flex-wrap wrap
		justify-content space-around
	&-ul 
		//width 370px
		
		margin-bottom 1rem
		list-style none
		h2 
			margin-bottom 15px
		li 
			line-height 32px
			cursor pointer
			&:before
				content '\f058'
				font-family:'FontAwesome'
				padding-right .5rem
				color naranja
				font-size 1rem
		a 
			color #333
			&:hover
				text-decoration underline
.tours
	display flex
	flex-wrap wrap
	justify-content space-around
	clear both
	&-item 
		width 256px
		position relative
		&:hover
			.tours-item-title
				color naranja
		&-title
			font-size .8rem
			line-height 20px
			text-align center
		&-img
			position relative
			width 100%
			height 160px
			overflow hidden
			display block
			img
				width 100%
		&-link
			position absolute
			left 0
			right 0
			top 0
			bottom 0
.additional-info
	display flex
	flex-wrap wrap
	justify-content space-around
	font-size .9rem
	clear both
	> div
		width 24%
		background-color #e6e2e1
		padding 1rem
		ul 
			margin-left 15px
		h2
			background-color naranja
			color white
			text-align center
			padding 0 .3rem
			font-size 1.2rem
	p 
		margin-bottom .5rem
.slider
	width 100%
	
	.gallery-item
		background-repeat none
		background-size cover
		background-position center center
		width 100%
		height 300px
	img 
		display block
		width 100%
	.owl-dots
		display none !important
	
		
	.owl-prev
	.owl-next
		position absolute
		top 50%
		transform translate(0, -50%)
		font-family: 'icomoon' !important;
		color white
		font-size 4rem
			
	.owl-prev
		left 1rem
		&:before
			content: "\f104";
			opacity 1
	.owl-next
		right 1rem
		&:before
			content: "\f105";
			opacity 1
@media screen and (min-width:980px)	 
	.slider
		float right
		width 450px
		margin-left 1rem
		margin-bottom 1rem
		margin-top -3rem	
				
.testimonials
	background-color #fecb83//#291f15
	padding-top 60px
	padding-bottom 60px
	text-align center
	color cafe
	.fa-quote-left
		float left
	.fa-quote-right
		float right

.contact
	background-color naranja
	color white
	padding-top 30px
	padding-bottom 30px
	&-container
		display flex
		flex-wrap wrap
		justify-content space-around
	&-item 
		width 270px
		&.emails
			font-size .9rem
	h3 
		text-transform uppercase
		color white
	a 
		color white
	.social
		&-item 
			display inline-block
			font-size 1.5rem
			padding .5rem
.footer
	background-color #000
	color white
	padding-top 15px 
	padding-bottom 15px
	a 
		color white
		font-size 2rem
		display inline-block
		vertical-align middle

.pagination{
	text-align: center;
}
.pagination>h2{
	display: none;
}
.pagination .page-numbers {
    display: inline-block;
    background-color: verde;
    color: #fff;
    padding: .8rem;
    line-height: 18px;
}
.pagination .page-numbers.current, .pagination .page-numbers:hover {
    background-color: #000;
}

